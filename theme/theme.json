{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"palette": [
				{ "slug": "teal-1", "color": "#10b0b8", "name": "Teal 1" },
				{ "slug": "teal-2", "color": "#0e9ea5", "name": "Teal 2" },
				{ "slug": "teal-3", "color": "#0d8d93", "name": "Teal 3" },
				{ "slug": "teal-4", "color": "#0b7b80", "name": "Teal 4" },
				{ "slug": "teal-5", "color": "#0a6a6e", "name": "Teal 5" },
				{ "slug": "white", "color": "#ffffff", "name": "White" },
				{ "slug": "black", "color": "#000000", "name": "Black" },
				{ "slug": "gray", "color": "#666666", "name": "Gray" },
				{ "slug": "border", "color": "#d9d9d9", "name": "Border" }
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Playfair Display', Georgia, serif",
					"slug": "playfair-display",
					"name": "Playfair Display",
					"fontFace": [
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/playfair-display-regular.woff2" ]
						},
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/playfair-display-regular.woff2" ]
						},
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "400",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/playfair-display-italic.woff2" ]
						},
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "700",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/playfair-display-italic.woff2" ]
						}
					]
				},
				{
					"fontFamily": "'Montserrat', 'Helvetica Neue', Helvetica, Arial, sans-serif",
					"slug": "montserrat",
					"name": "Montserrat",
					"fontFace": [
						{
							"fontFamily": "Montserrat",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/montserrat-regular.woff2" ]
						},
						{
							"fontFamily": "Montserrat",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/montserrat-regular.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "slug": "small", "size": "0.875rem", "name": "Small" },
				{ "slug": "medium", "size": "1rem", "name": "Medium" },
				{ "slug": "large", "size": "1.25rem", "name": "Large" },
				{ "slug": "x-large", "size": "1.75rem", "name": "Extra Large" },
				{ "slug": "xx-large", "size": "2.5rem", "name": "Extra Extra Large" }
			]
		},
		"layout": {
			"contentSize": "980px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--playfair-display)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--montserrat)",
					"fontWeight": "700",
					"textTransform": "uppercase",
					"letterSpacing": "0.0625em"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--teal-1)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--teal-3)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--teal-1)",
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--montserrat)",
					"textTransform": "uppercase",
					"letterSpacing": "0.0625em",
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--teal-3)"
					}
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--montserrat)",
					"textTransform": "uppercase",
					"letterSpacing": "0.0625em"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--white)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--white)"
							}
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--montserrat)",
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--small)",
					"letterSpacing": "0.0625em"
				}
			}
		}
	},
	"templateParts": [
		{ "name": "header", "title": "Header", "area": "header" },
		{ "name": "footer", "title": "Footer", "area": "footer" }
	]
}
